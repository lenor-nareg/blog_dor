{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}


<section class="articles">

    {% for article in articles %}
        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} Ã  {{ article.createdAt |  date('H:i') }} dans a categorie : 5 etapes</div>
            <div class="content">
                <img src="{{ article.image }}" alt="">
                {{ article.content | raw }}
                <a href="{{ path('post', {'id': article.id}) }}" class="btn btn-primary">read more</a>
            </div>
        </article>
    {% endfor %}
</section>

{% endblock %}
